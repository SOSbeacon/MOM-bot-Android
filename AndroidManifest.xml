<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="org.cnc.mombot"
    android:installLocation="auto"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="18"
        android:targetSdkVersion="18" />
    <!--
    Declare this required feature if you want to make the app available to BLE-capable
    devices only.  If you want to make your app available to devices that don't support BLE,
    you should omit this in the manifest.  Instead, determine BLE capability by using
    PackageManager.hasSystemFeature(FEATURE_BLUETOOTH_LE)
    -->
    <uses-feature
        android:name="android.hardware.bluetooth_le"
        android:required="true" />
    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.WRITE_SMS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:name="org.cnc.mombot.MainApplication"
        android:allowBackup="true"
        android:allowClearUserData="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:vmSafeMode="true" >
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="org.cnc.mombot.ble.activity.DeviceRecordedActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="org.cnc.mombot.ble.activity.SensorLogActivity" >
        </activity>
        <activity android:name="org.cnc.mombot.ble.activity.MyDeviceScanActivity" >
        </activity>
        <activity android:name="org.ble.sensortag.DeviceScanActivity" >
        </activity>
        <activity android:name="org.ble.sensortag.DeviceServicesActivity" />
        <activity
            android:name="org.ble.sensortag.fusion.SensorFusionActivity"
            android:hardwareAccelerated="false" />
        <activity android:name="org.cnc.mombot.activity.LoginActivity" >
        </activity>
        <activity android:name="org.cnc.mombot.activity.MainActivity" >
        </activity>
        <activity android:name="org.cnc.mombot.activity.WeatherActivity" >
        </activity>
        <activity android:name="org.cnc.mombot.activity.RssActivity" >
        </activity>
        <activity
            android:name="org.cnc.mombot.activity.CalendarSampleActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity
            android:name="org.cnc.mombot.activity.AddOrEditCalendarActivity"
            android:theme="@android:style/Theme.Light.NoTitleBar" >
        </activity>
        <activity android:name="org.cnc.mombot.fragment.CalendarEventFragment" >
        </activity>
        <activity android:name="org.cnc.mombot.activity.ReminderAddActivity" >
        </activity>
        <activity android:name="org.cnc.mombot.activity.EmailSetupActivity" >
        </activity>
        <activity android:name="org.cnc.mombot.activity.ReadEmailSmsActivity" >
        </activity>
        <activity android:name="org.cnc.mombot.activity.CalendarActivity" >
        </activity>
        <activity android:name="org.cnc.mombot.activity.SendSmsEmailActivity" >
        </activity>
        <activity android:name="org.cnc.mombot.activity.CameraActivity" >
        </activity>
        <activity android:name="org.cnc.mombot.ble.activity.ReportActivity" >
        </activity>
        <activity
            android:name="org.cnc.mombot.activity.RecognizeActivity"
            android:theme="@android:style/Theme.Holo.Dialog.NoActionBar" >
        </activity>

        <receiver android:name="org.cnc.mombot.ble.service.MyBluetoothStateReciever" >
            <intent-filter>
                <action android:name="android.bluetooth.adapter.action.STATE_CHANGED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="org.cnc.mombot.utils.AlarmReceiver"
            android:process=":remote" >
        </receiver>
        <receiver android:name="org.cnc.mombot.utils.ServiceStarter" >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <!-- PROVIDER -->
        <provider
            android:name="org.cnc.mombot.provider.DbProvider"
            android:authorities="org.cnc.mombot"
            android:exported="true" >
        </provider>

        <service
            android:name="org.ble.sensortag.BleService"
            android:enabled="true" />
        <service
            android:name="org.ble.sensortag.BleSensorsRecordService"
            android:enabled="true" />
        <service
            android:name="org.cnc.mombot.ble.service.MyBleSensorsRecordService"
            android:enabled="true" />

        <activity
            android:name="org.cnc.mombot.activity.NotificationActivity"
            android:clearTaskOnLaunch="true"
            android:configChanges="orientation|screenSize"
            android:label="@string/app_name"
            android:theme="@style/Theme.FloatingWindow.Popup"
            android:windowSoftInputMode="adjustResize|stateAlwaysHidden" />
    </application>

</manifest>