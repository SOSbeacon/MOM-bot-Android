<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/common_margin_layout" >

    <TextView
        android:id="@+id/tvDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/common_margin_layout"
        android:maxLines="2"
        android:textSize="@dimen/common_textsize_medium" />

    <TextView
        android:id="@+id/tvTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvDesc"
        android:textColor="@color/gray"
        android:textSize="@dimen/common_textsize_small" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/border"
        android:layout_below="@id/tvTime"
        android:background="@android:color/darker_gray" />

</RelativeLayout>